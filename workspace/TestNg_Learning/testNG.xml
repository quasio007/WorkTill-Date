	<suite name="Learning TestNG" parallel ="tests"> -->
	
	<test name="Array Assert">
		<classes>
			<class name="com.testNg.ArrayAssert" />
		</classes>
	</test>
	<test name="Data Provider">
		<classes>
			<class name="com.testNg.ParametrisedTestUsingDaataProvider" />
