	</test>

	<test name="Test Skipping">
		<classes>
			<class name="com.testNg.TestSkippingAndPriority" />
		</classes>
	</test>
		<test name="SoftAssert">
		<classes>
			<class name="com.testNg.SoftAssertTryial" />
		</classes>
	</test>
	
		<test name="BeforeAfterAnnotation">
